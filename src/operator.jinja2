<msml:operator xmlns:msml="http://sfb125.de/msml"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://sfb125.de/msml"
               name="{{ name }}">

    <meta>
        <entry key="doc">
            {{ title }}
            ===========

            {{ documentation|indent(12) }}

            {{ description|indent(12) }}

            :License: {{ license }}
            :Contributor: {{ contributor }}
        </entry>
        <entry key="category" value="{{ category }}" />
    </meta>


    <runtime>
        <sh template="{{ executable }} {{ params }}"/>
    </runtime>

    <input>
    {% for i in inputs %}
        <arg name="{{ i.name }}" logical="{{ i.logical }}" physical="{{ i.physical }}">
            <meta key="doc">
                {{ i.doc | indent(12) }}
            </meta>
        </arg>
    {% endfor %}
    </input>

    <output>
        {% for o in outputs %}
            <arg name="{{ o.name }}" logical="{{ o.logical }}" physical="{{ o.physical }}">
                <meta key="doc">
                {{ o.doc | indent(12) }}
                </meta>
            </arg>
        {% endfor %}
    </output>

    <parameters>
        {% for i in parameters %}
            <arg name="{{ i.name }}"
                 logical="{{ i.logical }}" physical="{{ i.physical }}"
                 {% if i.default %}default="{{i.default}}"{% endif %}
                 {% if i.target %}target="{{ i.target }}"{% endif %} >
                <meta key="doc">
                    {{ i.doc | indent(20) }}
                </meta>
            </arg>
        {% endfor %}
    </parameters>
</msml:operator>